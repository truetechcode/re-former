<div>
    <%= form_for(@user) do |f| %>
        <%= f.label 'your username here' %> <br>
        <%= f.text_field :username, :placeholder => 'username' %> <br>
        
        <%= f.label 'your email here' %> <br>
        <%= f.email_field :email, :placeholder => 'example@example.com' %> <br>

        <%= f.label 'Enter your password' %> <br>
        <%= f.password_field :password %> <br>

        <%= f.label 'Confirm the password' %> <br>
        <%= f.password_field :password_confirmation %> <br>

        <%= f.submit "Create my account" %>
    <% end %>
</div>