<h1>Edit a particuler User</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <%= form_for @user, url: {action: "update"}, html: {method: "patch"} do |f| %>
    <%= render 'shared/error_messages' %> <br>
    <%= f.label 'your username here', class: 'col-12'%> <br>
    <%= f.text_field :username, :placeholder => 'username' %> <br>
    
    <%= f.label 'your email here' %> <br>
    <%= f.email_field :email, :placeholder => 'example@example.com' %> <br>

    <%= f.label 'Enter your password' %> <br>
    <%= f.password_field :password %> <br>

    <%= f.label 'Confirm the password' %> <br>
    <%= f.password_field :password_confirmation %> <br>

    <%= f.submit "Create my account" %>
  <% end %>
  </div>
</div>